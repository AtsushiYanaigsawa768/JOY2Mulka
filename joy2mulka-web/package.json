{
  "name": "joy2mulka",
  "private": true,
  "version": "1.0.0",
  "description": "JOYエントリーリストからMulkaスタートリストを生成",
  "author": "JOY2Mulka",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "npm run build && npx electron .",
    "electron:build": "npm run build && npx electron-builder --win --dir",
    "electron:build:mac": "npm run build && npx electron-builder --mac --dir",
    "electron:dist": "npm run build && npx electron-builder --win",
    "electron:dist:mac": "npm run build && npx electron-builder --mac",
    "electron:dist:all": "npm run build && npx electron-builder --win --mac"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "papaparse": "^5.4.1",
    "xlsx": "^0.18.5",
    "jszip": "^3.10.1",
    "file-saver": "^2.0.5"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/papaparse": "^5.3.14",
    "@types/file-saver": "^2.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.joy2mulka.app",
    "productName": "JOY2Mulka",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.utilities",
      "artifactName": "JOY2Mulka-${arch}.${ext}"
    },
    "dmg": {
      "title": "JOY2Mulka",
      "artifactName": "JOY2Mulka-${arch}.dmg"
    },
    "portable": {
      "artifactName": "JOY2Mulka-Portable.exe"
    }
  }
}
